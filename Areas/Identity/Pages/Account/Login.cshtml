@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/login.css" />

<body class="main-bg">
    <div class="login-container text-c animated flipInX">

        <h3 class="text-whitesmoke">Login</h3>
        <p class="text-whitesmoke">Internal Employees only</p>
        <div class="container-content">
            <form id="account" method="post" class="margin-t">
                <div class="form-group">
                    <input asp-for="Input.Email" type="text" class="form-control" placeholder="username@peoplepower.ro" required="">
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="*****" required="">
                </div>

                <button type="submit" class="form-button button-l margin-b">Login</button>
                <p class="text-whitesmoke text-center"><small>Do not have an account? Contact your manager<br /></small></p>
            </form>
            <p class="margin-t text-whitesmoke"><small> Team1 Internship PP &copy; 2020</small> </p>
        </div>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}